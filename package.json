{
  "name": "todo-app",
  "version": "0.1.2",
  "description": "Todo App example as an \"evergreen\" project",
  "main": "src/index.js",
  "repository": "git@github.com:ProjectEvergreen/todo-app.git",
  "author": "Owen Buckley <owen@thegreenhouse.io>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && webpack --config webpack.config.prod.js --progressg",
    "develop": "webpack-dev-server --config webpack.config.develop.js --open",
    "lint": "eslint \"*.js\" \"./src/**/*.js\"",
    "gh-pages": "rimraf ./docs && yarn build && cp -rv ./build/ ./docs",
    "serve": "yarn build && cd build && http-server -o",
    "test": "rimraf ./reports && karma start"
  },
  "dependencies": {
    "lit-element": "^2.0.1"
  },
  "devDependencies": {
    "css-loader": "^0.28.11",
    "css-to-string-loader": "^0.1.3",
    "cssnano": "^3.10.0",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.1.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine": "^3.3.1",
    "jasmine-core": "^3.3.0",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "^1.1.2",
    "karma-junit-reporter": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.1.5",
    "puppeteer": "^0.11.0",
    "rimraf": "^2.6.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  }
